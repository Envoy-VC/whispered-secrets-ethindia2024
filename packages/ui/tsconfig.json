{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@envoy1084/style-guide/typescript/node20",
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    "lib": ["dom", "dom.iterable", "ES2022", "ES2023"],
    "noEmit": true,
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "Bundler",

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "eslint.config.mjs"],
  "exclude": ["node_modules", "**/*.js", "**/*.mjs", "dist"]
}
